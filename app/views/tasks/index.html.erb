<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %>さんのTaskList</p>
  <ul>
    <% @tasks.each do |task| %>
    <li><%= link_to task.id,task %>:<%= task.content %>&gt; <%= task.status %></li>
    <% end %>
  </ul>
  <%= link_to '新規登録', new_task_path %>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Task List</h1>
      <%= link_to 'Sign up now!', new_user_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>